#!/bin/bash
#
# heartsserver This shell script takes care of starting and stopping
#               heartsserver
#


# Configuration
# (this should be a separate file in a real system, keep here for now)

HEARTSSERVER="/home/hearts/hearts/hearts/network-server/heartsd"
HEARTSOPTIONS="--daemon"

[ -x $HEARTSSERVER ] || exit 1

RETVAL=0
prog="heartsd"
pidfile='/var/run/hearts.pid'
pid=`cat $pidfile`

start() {
	# Start daemon

	echo -n $"Starting $prog: "
	$HEARTSSERVER $HEARTSOPTIONS
	RETVAL=$?
	echo
	return $RETVAL
}

stop() {
	# Stop daemon
	echo -n $"Shutting down $prog: "
	RETVAL=$?
	echo
	return $RETVAL
}

# See how we were called.
case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|reload)
	stop
	start
	RETVAL=$?
	;;
  status)
  	if [ -f $pidfile ]; then
		echo "$prog seems to be running (pid $pid)..."
		RETVAL=0
	else
		echo "$prog doesn't seem to be running."
		RETVAL=1
	fi
	;;
  *)
	echo $"Usage: $0 {start|stop|restart|status}"
	exit 1
esac

exit $RETVAL

